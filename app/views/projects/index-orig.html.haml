        GitHub
      .github-form.service-form
        %form
          %input{ :type => "text", :placeholder => "GitHub Repo Url" }
          %button.submit-add-repo.ladda-button{:data => {:style => "expand-left"}}
            %span.ladda-label
              Add Repo
            %span.ladda-spinner
    .travis.service
      %h4
        Travis Ci
    .code-climate.service
      %h4
